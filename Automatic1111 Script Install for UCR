#!/bin/bash

# Function to check if the user has admin privileges
check_admin_privileges() {
    if [[ $EUID -ne 0 ]]; then
        echo "Requesting admin privileges..."
        sudo "$0" "$@"
        exit $?
    fi
}

# Step 1: Check for admin privileges
check_admin_privileges

# Step 2: Install Homebrew
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

# Check if Homebrew is installed successfully
if [[ $? -ne 0 ]]; then
    echo "Homebrew installation failed."
    exit 1
fi

# Step 3: Install required packages
brew install cmake protobuf rust python@3.10 git wget

# Check if package installation is successful
if [[ $? -ne 0 ]]; then
    echo "Package installation failed."
    exit 1
fi

# Step 4: Clone the AUTOMATIC1111 repository
git clone https://github.com/AUTOMATIC1111/stable-diffusion-webui

# Check if the repository is cloned successfully
if [[ $? -ne 0 ]]; then
    echo "Repository cloning failed."
    exit 1
fi

# Step 5: Download the model and config files and place them in the specified folder
cd stable-diffusion-webui/models/Stable-diffusion
wget -O model.pt https://huggingface.co/runwayml/stable-diffusion-v1-5/resolve/main/v1-5-pruned-emaonly.ckpt
wget -O config.yaml https://example.com/config.yaml  # Replace with the actual config.yaml URL

# Check if model and config file downloads are successful
if [[ $? -ne 0 ]]; then
    echo "Model or config file download failed."
    exit 1
fi

echo "All steps completed successfully."
exit 0
